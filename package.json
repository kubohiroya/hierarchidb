{
  "name": "hierarchidb",
  "version": "0.0.1",
  "description": "High-performance tree-structured data management framework for browser environments",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Hiroya Kubo",
    "email": "hiroya@cuc.ac.jp"
  },
  "keywords": [
    "tree",
    "hierarchical-data",
    "indexeddb",
    "dexie",
    "comlink"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check . && turbo run typecheck",
    "typecheck": "turbo run typecheck",
    "e2e": "turbo run e2e",
    "count-lines": "node scripts/count-lines.js",
    "wc:ts": "find packages -name '*.ts' -o -name '*.tsx' | xargs wc -l",
    "wc:test": "find packages -name '*.test.ts' -o -name '*.test.tsx' -o -name '*.spec.ts' -o -name '*.spec.tsx' | xargs wc -l | tail -1",
    "wc:md": "find . -name '*.md' -not -path './node_modules/*' | xargs wc -l | tail -1",
    "wc:summary": "echo 'ðŸ“Š Line Count Summary:' && echo '  TypeScript/TSX:' && pnpm run wc:ts | tail -1 && echo '  Test Files:' && pnpm run wc:test && echo '  Markdown:' && pnpm run wc:md && echo '  Legacy count script:' && pnpm run count-lines",
    "analyze:docs": "node scripts/analyze-docs.cjs",
    "license-check": "pnpm --filter @hierarchidb/app license-check",
    "license-check:summary": "pnpm --filter @hierarchidb/app license-check:summary",
    "license-check:csv": "pnpm --filter @hierarchidb/app license-check:csv",
    "license-check:all": "pnpm --filter @hierarchidb/app license-check:all"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.17.2",
    "playwright": "^1.54.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^2.1.9"
  }
}
