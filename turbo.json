{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    },
    "format": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**"],
      "inputs": ["$TURBO_DEFAULT$", "!references/**", "!docs/references/**"]
    }
  },
  "globalEnv": ["NODE_ENV", "VITE_*"],
  "globalDependencies": ["tsconfig.json", "tsconfig.base.json"]
}