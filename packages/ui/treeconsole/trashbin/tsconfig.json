{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "skipLibCheck": true  // Required for @testing-library/jest-dom compatibility
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
