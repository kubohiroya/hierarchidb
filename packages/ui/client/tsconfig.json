{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "lib": [
      "ES2020",
      "DOM",
      "WebWorker"
    ],
    "skipLibCheck": true  // Required for @types/node disposable symbols compatibility
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
