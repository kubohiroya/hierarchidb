{
  "name": "@hierarchidb/runtime-worker",
  "version": "0.0.1",
  "description": "Worker-side database and processing for hierarchidb",
  "type": "module",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc && tsc-alias",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\""
  },
  "dependencies": {
    "@hierarchidb/common-core": "workspace:*",
    "@hierarchidb/common-api": "workspace:*",
    "comlink": "^4.4.2",
    "dexie": "^4.2.0",
    "jotai": "^2.13.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^24.3.0",
    "fake-indexeddb": "^6.1.0"
  },
  "license": "MIT"
}
