{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "skipLibCheck": true,  // Required for jest/vitest/vite version conflicts
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "types": [
      "@testing-library/jest-dom",
      "vitest/globals"
    ],
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
