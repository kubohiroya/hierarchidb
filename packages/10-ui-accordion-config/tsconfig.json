{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
