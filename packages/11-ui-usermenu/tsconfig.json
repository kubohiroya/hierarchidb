{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "Node16",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
