{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "src/components/ErrorBoundary.tsx",
    "src/components/FileInputWithUrl/**/*",
    "src/components/UserLoginButton/**/*",
    "src/components/GuidedTour/**/*",
    "src/components/DropdownMenu/**/*",
    "src/components/IndeterminateCheckbox/**/*",
    "src/components/SelectField/**/*",
    "src/components/SpeedDialMenu/**/*",
    "src/components/TextCopyComponent/**/*",
    "src/components/ThemedLoadingScreen.tsx",
    "src/components/UserAvatar/**/*",
    "src/components/sparkle-animation/**/*",
    "src/components/LinkButton/**/*",
    "src/components/MemoryUsageBar/**/*",
    "src/components/MemoryUsageChart/**/*",
    "src/components/MemoryUsageMonitor/**/*",
    "src/components/MenuListItemButton/**/*",
    "src/components/NavLinkMenu/**/*",
    "src/components/NotificationSystem/**/*",
    "src/components/ResourceProjectPreviewGroup/**/*",
    "src/components/ResourceProjectToggle/**/*",
    "src/components/AccordionMenu/**/*",
    "src/components/ToggleButtonItemGroup/**/*",
    "src/components/ResizableSidebar/**/*",
    "src/components/GitHubCorner/**/*",
    "src/components/StyledMenu/**/*",
    "src/components/toast/**/*",
    "src/theme/hooks/**/*",
    "src/theme/components/**/*",
    "src/theme/GetStoredThemeMode.ts",
    "src/theme/StoreThemeMode.ts",
    "src/theme/ThemeContextType.ts",
    "src/themes/hooks/**/*",
    "src/types/nodeDefinition.ts",
    "src/utils/themeUtils.ts",
    "src/services/UnifiedDownloadService.ts"
  ],
  "references": [{ "path": "../core" }]
}
