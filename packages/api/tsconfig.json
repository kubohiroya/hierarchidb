{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["node"],
    "noEmit": false,
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["./src/**.ts"],
  "exclude": ["./node_modules", "./dist"]
}
