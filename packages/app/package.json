{
  "name": "@hierarchidb/app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/entry.client.tsx",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build --mode production",
    "build:dev": "react-router build --mode development",
    "preview": "vite preview --config vite.preview.config.ts",
    "typecheck": "tsc --noEmit",
    "license-check": "license-checker --json --out ../../docs/licenses.json",
    "license-check:summary": "license-checker --summary --out ../../docs/licenses-summary.txt",
    "license-check:csv": "license-checker --csv --out ../../docs/licenses.csv",
    "license-check:all": "pnpm run license-check && pnpm run license-check:summary && pnpm run license-check:csv && echo 'âœ… License reports generated in docs/'",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\" \"*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\" \"*.{ts,js,json}\"",
    "predeploy": "pnpm run build",
    "deploy": "gh-pages -d build/client -r git@github.com:kubohiroya/hierarchidb.git"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hierarchidb/core": "workspace:*",
    "@hierarchidb/ui-auth": "workspace:*",
    "@hierarchidb/ui-client": "workspace:*",
    "@hierarchidb/ui-core": "workspace:*",
    "@hierarchidb/ui-i18n": "workspace:*",
    "@hierarchidb/ui-landingpage": "workspace:*",
    "@hierarchidb/ui-layout": "workspace:*",
    "@hierarchidb/ui-navigation": "workspace:*",
    "@hierarchidb/ui-routing": "workspace:*",
    "@hierarchidb/ui-theme": "workspace:*",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@react-router/fs-routes": "^7.8.1",
    "@react-router/node": "^7.8.1",
    "isbot": "^5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router": "^7.8.1",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@react-router/dev": "^7.8.1",
    "@react-router/node": "^7.8.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "gh-pages": "^6.3.0",
    "license-checker": "^25.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
