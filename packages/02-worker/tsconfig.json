{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "WebWorker"],
    "outDir": "./dist",
    "rootDir": "./src",


    "composite": false,
    "incremental": false,

    "noEmit": false,
    "emitDeclarationOnly": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,  // Temporarily relaxed for compatibility
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true  // Required for @types/node disposable symbols compatibility
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
