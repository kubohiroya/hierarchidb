{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
