{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "lib": [
            "es2022",
            "dom",
            "dom.iterable",
            "webworker"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": false,
        "incremental": false,
        "allowImportingTsExtensions": false,
        "noEmit": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "emitDeclarationOnly": false,
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "preserveConstEnums": true,
        "useDefineForClassFields": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strictBuiltinIteratorReturn": true,
        "alwaysStrict": true,
        "useUnknownInCatchVariables": true
    },
    "files": [
        "./src/WorkerAPIImpl.ts",
        "./src/client.ts",
        "./src/index.ts",
        "./src/vite-env.d.ts",
        "./src/worker-entry.ts",
        "./src/worker.ts",
        "./src/command/CommandProcessor.ts",
        "./src/command/index.ts",
        "./src/command/types.ts",
        "./src/db/CoreDB.ts",
        "./src/db/EphemeralDB.ts",
        "./src/handlers/BaseEntityHandler.ts",
        "./src/handlers/EntityHandler.test.suite.ts",
        "./src/handlers/EntityHandler.ts",
        "./src/handlers/SimpleEntityHandler.ts",
        "./src/handlers/SubEntityHandler.ts",
        "./src/handlers/WorkingCopyHandler.ts",
        "./src/handlers/index.ts",
        "./src/handlers/types.ts",
        "./src/lifecycle/NodeLifecycleManager.ts",
        "./src/lifecycle/index.ts",
        "./src/lifecycle/types.ts",
        "./src/operations/TreeOperations.ts",
        "./src/operations/WorkingCopyOperations.ts",
        "./src/operations/index.ts",
        "./src/plugin/PluginAPIService.ts",
        "./src/plugin/PluginLoader.ts",
        "./src/plugin/index.ts",
        "./src/registry/SimpleNodeTypeRegistry.ts",
        "./src/registry/UnifiedNodeTypeRegistry.ts",
        "./src/registry/index.ts",
        "./src/registry/types.ts",
        "./src/registry/types/unified-plugin.ts",
        "./src/services/ExportService.ts",
        "./src/services/ImportService.ts",
        "./src/services/TreeMutationServiceImpl.ts",
        "./src/services/TreeObservableServiceImpl.ts",
        "./src/services/TreeQueryServiceImpl.ts",
        "./src/services/observable/DatabaseHelper.ts",
        "./src/services/observable/EventFilterManager.ts",
        "./src/services/observable/ObservableFactory.ts",
        "./src/services/observable/SubscriptionManager.ts",
        "./src/services/observable/index.ts",
        "./src/utils/workerLogger.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/__tests__/**"
    ]
}
